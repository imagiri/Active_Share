<div class="user-edit">
<div class="user-edit-top">
<h1>ユーザー情報</h1>
</div>
<%= form_with(model:@user, local:true) do |f| %>

  <div class="user-show-top">
    <div class="icon-box" id="icon_view" onClick="$('#icon').click()">
      <%= image_tag @user.icon.url,class: "icon", id: :icon_img_prev %>
    </div>

    <div id="back_icon_view" onClick="$('#back_icon').click()">
      <%= image_tag @user.back_icon.url, class:"back-icon view_box user-show-top", id: :back_img_prev %>
    </div>

    <div class="img-form">
    <%= f.label :icon %>
    <%= f.file_field :icon, id: :icon, type: :file %>
    <%= f.label :back_icon %>
    <%= f.file_field :back_icon, id: :back_icon, type: :file %>
    </div>
  </div>


<div class="user-edit-content">
<table align="center">
  <tr class="name-content form-box">
    <th><%=f.label :name %></th>
    <td><%=f.text_field :name %></td>
  </tr>

  <tr class="introduction-content form-box">
    <th><%=f.label :introduction %></th>
    <td><%=f.text_area :introduction %></td>
  </tr>

  <tr class="sex-content form-box">
    <th><%=f.label :sex %></th>
    <td><%=f.select :sex, [:男, :女],class: 'form-control btn btn-info'  %></td>
  </tr>

  <tr class="age-content form-box">
    <th><%=f.label :age %></th>
    <td>
      <%= f.select :age, User.ages.keys, class: 'form-control btn btn-info' %>
    </td>
  </tr>

  <tr class="activity-area-content form-box">
    <th><%=f.label :activity_area %></th>
    <td>
      <%= f.select :activity_area, User.activity_areas.keys, class: 'form-control btn btn-info' %>
      <%= f.select :activity_area, User.activity_areas.keys, class: 'form-control btn btn-info' %>
      <%= f.select :activity_area, User.activity_areas.keys, class: 'form-control btn btn-info' %>
    </td>
  </tr>

  <tr class="outdoor-history-content form-box">
    <th><%=f.label :outdoor_history %></th>
    <td>
      <%= f.select :outdoor_history, User.outdoor_histories.keys, class: 'form-control btn btn-info' %>
    </td>
  </tr>

  <tr class="birth-place-content form-box">
    <th><%=f.label :birth_place %></th>
    <td>
      <%= f.select :birth_place, User.birth_places.keys, class: 'form-control btn btn-info' %>
    </td>
  </tr>

  <tr class="form-box">
    <th></th>
    <td><%= f.submit "更新する" %></td>
  </tr>

</table>
</div>
<% end %>
</div>
