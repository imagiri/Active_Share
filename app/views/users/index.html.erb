<div class="index-top">
  <h1>ユーザー一覧ページ</h1>
</div>
<div class="index-body">
<div class="index-side">
  <%= search_form_for @search do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, "Name" %>
    <%= f.text_field :name_cont, class: "form-control" %>
    <div class="birth-form">
      <p><%= f.label :birth_place_cont, "birth_places" %></p>
      <p><%= f.select :birth_place, User.birth_places.keys, {include_blank: true} %></p>
    </div>
    <div class="age-form"
      <p><%= f.label :age_cont, "age" %></p>
      <p><%= f.select :age, User.ages.keys, {include_blank: true} %></p>
  </div>

  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>
</div>

<div class="index-content">
  <% @users.each do |user| %>
  <%= link_to(user_path(user.id)) do %>
  <div class="user-index-show">
    <%= image_tag("sample_icon.png",size: 100) %>
    <p><%=link_to user.name, user_path(user.id) %></p>
    <%= user.age %>
    <%= user.birth_place %>
    <%= render partial: 'users/follow_form', locals: { user: user} %>
  </div>
    <% end %>
    <% end %>
  <div class="paginate">
        <%= paginate @users -%>
  </div>
</div>
</div>
